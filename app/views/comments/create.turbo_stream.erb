<%= turbo_stream.prepend 'comments' do %>
  <%= render partial: 'comments/comment',
             locals: {comment: @comment} %>
<% end %>

<%= turbo_stream.update 'new_comment' do %>
  <%= render partial: 'comments/form',
             locals: {commentable: @commentable, comment: Comment.new} %>
<% end %>

<%= turbo_stream_flash %>
