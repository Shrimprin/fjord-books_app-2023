<h2><%= t('views.common.title_index', name: i18n_pluralize(Comment.model_name.human)) %></h2>

<div id="comments">
  <% if comments.any? %>
    <% comments.each do |comment| %>
      <div class="comment-partial">
        <%= render 'comments/comment', comment: comment %>
      </div>
    <% end %>
  <% else %>
    <%= t('views.comments.nothing') %>
  <% end %>
</div>
