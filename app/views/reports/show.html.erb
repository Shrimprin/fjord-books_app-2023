<h1><%= t('views.common.title_show', name: Report.model_name.human) %></h1>

<div class="show-item">
  <%= render partial: 'reports/report', object: @report %>
</div>

<nav class="page-nav">
  <%= link_to t('views.common.edit', name: Report.model_name.human.downcase), edit_report_path(@report) if @report.user_id == current_user.id %> |
  <%= link_to t('views.common.back', name: i18n_pluralize(Report.model_name.human.downcase)), reports_path %>
  <%= button_to t('views.common.destroy', name: Report.model_name.human.downcase), @report, method: :delete if @report.user_id == current_user.id %>
</nav>

<%= render 'shared/comment_form', commentable: @report, comment: @comment %>
<%= render 'shared/comments', comments: @comments %>

